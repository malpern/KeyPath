<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Disable sandboxing (required for system-level operations) -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Required for AppleScript admin prompts (DEBUG mode fallback) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Allow executing external processes (kanata, helper) -->
    <key>com.apple.security.inherit</key>
    <true/>

    <!-- Network access for TCP communication with kanata -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>